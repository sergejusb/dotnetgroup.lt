extends layout

block content
  
  include header

  div.row
    div.span4
      h2 Artimiausi susitikimai
      - if (events.futureEvents.length == 0)
        p.muted Sustikimai dar nėra suplanuoti :(
        p Galėtum padaryti pranešimą? 
          a(href="mailto:seriog@yahoo.com?subject=dotnetgroup-pranesejas") Pranešk mums!
      - else
        ul.unstyled
          each event in events.futureEvents        
            li
              a(href="##{event.code}") #{event.dateShort} | #{event.name}
    div.span4
      h2 Ankstesni susitikimai
      ul.unstyled
        each event in events.pastEvents.slice(0, 4)
          li
            a(href="##{event.code}") #{event.dateShort} | #{event.name}
      p
        a(href="#events") pilnas sąrašas &raquo;
    div.span4
      h2 Apie grupę
      p Pagrindinis šios grupės tikslas - suburti su <strong>.net</strong> technologijomis dirbančius žmones vienoje vietoje, taip pagerinant tarpusavio komunikaciją ir išplečiant pažinčių tinklą.
      ul.inline
        li
          a(href="/rss.xml", title="RSS")
            img(src="/public/img/icon-rss.png", alt="RSS")
        li
          a(href="mailto:seriog@yahoo.com?subject=dotnetgroup", title="e-mail")
            img(src="/public/img/icon-email.png", alt="email")
        li
          a(href="https://github.com/sergejusb/DotNetGroup", target="_blank", title="GitHub")
            img(src="/public/img/icon-github.png", alt="GitHub")
        li
          a(href="http://www.linkedin.com/groups?gid=2088780", target="_blank", title="LinkedIn")
            img(src="/public/img/icon-linkedin.png", alt="LinkedIn")
  div.row
    div.span8
      h2 Rėmėjai
      div.row
        div.span4
          a(href="http://microsoft.com", target="_blank")
            img(src="/public/img/microsoft.png", alt="Microsoft")
        div.span4
          a(href="http://adform.com", target="_blank")
            img(src="/public/img/adform.png", alt="Adform")
    div.span2
      h2 Draugai
      ul.unstyled
        li
          a(href="http://itishnikai.lt", target="_blank") ITishnikai
        li
          a(href="http://sergejus.blogas.lt", target="_blank") Sergejus apie .NET
        li
          a(href="http://facebook.com/WPDLT", target="_blank") Windows Platforms Developers Lithuania
    div.span2
      h2 &nbsp;
      ul.unstyled
        li
          a(href="http://vilniusjs.lt", target="_blank") Vilnius JS
        li
          a(href="http://www.vilniusphp.lt", target="_blank") Vilnius PHP
        li
          a(href="http://www.vilnius-jug.lt", target="_blank") Vilnius JUG

  div.page-header(id="events")
    h1 &nbsp;
    h1 Susitikimai

  ul.thumbnails
    each event in events.futureEvents
      li.span6
        div.thumbnail
          h3(id="{#event.code}") #{event.date} | #{event.name}
          each presenter in event.presenters
            include home/presenters
          p(style="text-align:center")
            a(href="#{event.registration}", target="_blank")
              img(src="http://www.eventbrite.com/custombutton?eid=5250323860", alt="Eventbrite registracija")

    each event in events.pastEvents
      li.span4
        div.thumbnail
          h3(id="#{event.code}") #{event.name}
          p #{event.date}, daugiau informacijos: 
            a(href="#{event.registration}", target="_blank") Eventbrite
          each presenter in event.presenters
            include home/presenters